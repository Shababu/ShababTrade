<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style TargetType="TextBox"  x:Key="TextBoxH1" BasedOn="{StaticResource MaterialDesignTextBox}">
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxH2" BasedOn="{StaticResource MaterialDesignTextBox}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxH3" BasedOn="{StaticResource MaterialDesignTextBox}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxH4" BasedOn="{StaticResource MaterialDesignTextBox}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>


    <Style TargetType="PasswordBox" x:Key="PasswordBoxH2" BasedOn="{StaticResource MaterialDesignPasswordBox}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

</ResourceDictionary>