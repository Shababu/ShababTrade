<UserControl x:Class="ShababTrade.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShababTrade.CustomControls" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    
    
    <PasswordBox x:Name="PasswordInput" 
                 Style="{StaticResource PasswordBoxH2}" 
                 materialDesign:HintAssist.IsFloating="True" Cursor="Arrow">
        <materialDesign:HintAssist.Hint>
            <TextBlock Foreground="{StaticResource SecondaryTextBursh}" Text="Password"/>
        </materialDesign:HintAssist.Hint>
    </PasswordBox>
    
    
</UserControl>
